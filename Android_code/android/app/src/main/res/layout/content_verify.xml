<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.VerifyActivity"
    tools:showIn="@layout/activity_verify">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <TextView
            style="@style/black_00_28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#002BB5"
            android:text="标题" />

        <EditText
            android:id="@+id/verfiy_title"
            style="@style/gray66_28_normal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:background="@null" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#002BB5"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="上传图片"/>

    <ImageView
        android:id="@+id/img_upload"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/add_img"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/update"
        android:background="#002BB5"
        android:padding="10dp"
        android:text="提交"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#002BB5"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="历史赛事证明"/>

    <RelativeLayout
        android:id="@+id/my_activity_bg"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:background="#002BB5"
        android:paddingBottom="20dp"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_activity_title"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="怡乐园半程马拉松完赛"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_activity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="6月3日"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/item_activity_hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"
            android:layout_below="@id/item_activity_time"
            android:text="Hash:YSJDLFKJ787808934JJLYSWX"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_activity_time"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:text="✅"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>