<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.ResultActivity"
    tools:showIn="@layout/activity_result">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/result_logo"/>
        <TextView
            android:id="@+id/tv_title"
            android:text="发布成功"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/blue022bb5_54_normal"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:text="2秒后自动返回首页"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black_00_24"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_xq"
            style="@style/white_32_normal"
            android:layout_width="250dp"
            android:layout_height="43dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_shap_green"
            android:gravity="center"
            android:text="查看活动详情"
            android:onClick="goDetail"/>
    </LinearLayout>
</LinearLayout>
</android.support.constraint.ConstraintLayout>